
#include <stdio.h>
main ()
{
  
float salario,percentual,novosalario;

printf("Digite o salario do funcionario\n");
scanf ("%f",&salario);
printf("Digite o percentual\n");
scanf ("%f",&percentual);

novosalario = salario * (percentual/100);

printf ("\nSeu novo salario eh %f",novosalario+salario);

return 0;

}
