/******************************************************************************

03 – Faça um programa que receba três números e mostre o maior. 


*******************************************************************************/
#include <stdio.h>
int main()
{
float numero1,numero2,numero3;
printf("digite o primeiro numero\n");
scanf("%f",&numero1);
printf("digite o segundo numero\n");
scanf("%f",&numero2);
printf("digite o terceiro numero\n");
scanf("%f",&numero3);

if (numero1==numero2 && numero1 == numero3)
{
printf("Os 3 numeros sao iguais\n");
}

//VERIFICA O PRIMEIRO

else if (numero1>=numero2 && numero1 >= numero3)
{
if (numero1==numero2)
{
	printf("1=2 e maior\n");
	}	
else if (numero1==numero3)
{
	printf("1=3 e maior\n");
	}	
if (numero1>numero2 && numero1 > numero3)
{
	printf("O numero 1 eh o maior\n");
		}		
}
// VERIFICA O SEGUNDO
else if (numero2>=numero1 && numero2 >= numero3)
{
if (numero2==numero1)
{
	printf("2=2 e maior\n");
	}	
if (numero2==numero3)
{
	printf("2=3 e maior\n");
	}	
if (numero2>numero1 && numero2 > numero3)
{
	printf("O numero 2 eh o maior\n");
		}		
}

//VERIFICA O TERCEIRO

else if (numero3>=numero1 && numero3 >= numero2)
{
if (numero3==numero1)
{
	printf("3=1 e maior\n");
	}	
else if (numero3==numero2)
{
	printf("3=2 e maior\n");
	}	
else
{
	printf("O numero 3 eh o maior\n");
		}			

}
	return 0;
}
