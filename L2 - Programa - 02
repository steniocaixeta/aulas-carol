/******************************************************************************

02 – Faça um programa que receba dois números e mostre o menor. 

*******************************************************************************/
#include <stdio.h>

int main()
{
float numero1,numero2;
printf("Digite o primeiro numero:\n");
scanf("%f",&numero1);
printf("Digite o segundo numero:\n");
scanf("%f",&numero2);
if (numero1==numero2)
{
	printf("Os numeros sao iguais! primeiro:%.3f e segundo:%.3f",numero1,numero2);
	
}
else 
{
	if (numero1>numero2)
	printf("O menor numero eh o: %.3f",numero2);
	else 
	printf("O menor numero eh o: %.3f",numero1);
}
return 0;
}
